#include <iostream>
#include <string>
using namespace std;

int tablaMultiplicar(int num){
    int counter = 1;
    int product;
    while (counter <= 10){
        product = num*counter;
        cout << num << " x " << counter << " = " << product << endl;
        counter += 1;
    }
    return 0;
}

int multiplos3o5(){
    int counter = 999;
    int sum = 0;
    while(counter >= 1){
        if((counter%3 == 0) or (counter%5 == 0)){
            sum += counter;
        }
        counter -= 1;
    }
    return sum;
}

string creadorRectangulo(){
    int base, altura;
    cout << "Ingrese el numero de la base: ";
    cin >> base;
    cout << "Ingrese el numero de la altura: ";
    cin >> altura;
    while(altura >= 1){
        for (int i = 0; i < base; i++){
            cout << '*';
        }
        cout << endl;
        altura -= 1;
    }
    return "Rectangulo hecho";
}

string rectanguloConEspacios(){
    int base, altura;
    cout << "Ingrese el numero de la base: ";
    cin >> base;
    cout << "Ingrese el numero de la altura: ";
    cin >> altura;
    for (int i = 0; i < base; i++){
            cout << '*';
        }
        cout << endl;
    
    while(altura-2 >= 1){
        cout << '*';
        for (int i = 0; i < base-2; i++){
            cout << ' ';
        }
        cout << '*' << endl;
        altura -= 1;
    }
    for (int i = 0; i < base; i++){
            cout << '*';
        }
        cout << endl;
    return "Rectangulo hecho";
}

string rectanguloConEspaciosLoop(){
    int base, altura, veces, alturafinal, basefinal;
    cout << "Ingrese el numero de la base: ";
    cin >> base;
    cout << "Ingrese el numero de la altura: ";
    cin >> altura;
    cout << "Ingrese el numero de veces que quiere ver el rectangulo:";
    cin >> veces;
    
    alturafinal = altura - 2;
    basefinal = base - 2;
    
    while(veces >=1){
        for (int i = 0; i < base; i++){
            cout << '*';
        }
        cout << endl;
        for(int i = 0; i < alturafinal; i++){
            cout << '*';
            for (int i = 0; i < basefinal; i++){
                cout << ' ';
            }
            if (base > 1){
            cout << '*' << endl;
            }
        }
        for (int i = 0; i < base; i++){
                cout << '*';
            }
        cout << endl;  
        veces -= 1;
    }
    return "Rectangulo hecho";
}

int main() {
    int num, table, multiplos;
    string rectangulo, rectanguloEspacio, rectanguloEspaciosLoop; 
    cout << "Ingresa el numero del que requieras su tabla de multiplicar: ";
    cin >> num;
    table = tablaMultiplicar(num);
    cout << table << endl;
    
    multiplos = multiplos3o5();
    cout << "La suma de los multiplos de 3 o 5 del uno al mil es: " << multiplos << endl;
    
    cout << "Para dibujar un rectangulo siga las instrucciones" << endl;
    rectangulo = creadorRectangulo();
    cout << rectangulo << endl;

    cout << "Para dibujar un rectangulo con espacios siga las instrucciones" << endl;
    rectanguloEspacios = rectanguloConEspacios();
    cout << rectanguloEspacios << endl;

    cout << "Para dibujar un rectangulo con espacios MÃ¡s de una vez siga las instrucciones" << endl;
    rectanguloEspaciosLoop = rectanguloConEspaciosLoop();
    cout << rectanguloEspaciosLoop << endl;
    
    return 0;
}
